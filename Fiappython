#Exercício 3
senha = int(input('Digite sua senha: '))
if senha != 1234:
    print("Senha Inválida, digite outra senha!")
else:
    print("Acesso permitido, conectando ao sistema!")


#Exercício 4

n1 = int(input("Qual a quantidade de maçãs? "))
preco = 0.25
preco2 = 0.30

if(n1 >= 12):
    print(f"O preço das maçãs será de R$:{n1 * preco}")
else:
    print(f"O preço das maçãs será de R$:{n1 * preco2}")

salario = float(input("Digite o seu salário: "))
if salario < 1903.98:
    print("Isento")    
elif salario > 1903.98:
    aliquota = 0.075
elif salario > 2826.55:
    aliquota = 0.15
elif salario > 3751.05 and salario <= 4664.68:
    aliquota = 0.225
else:
    aliquota = 0.275
    desconto: float = salario*aliquota
    salario = salario - desconto
print(f"O desconto do seu salário foi de R$: {desconto}e o valor final será R${salario}")

vogal = input("Digite uma letra: ")
if vogal == ['A' or 'E' or 'I' or 'O' or 'U']:
    print(f"A letra que você digitou é uma vogal")
else:
    print("A letra que você digitou é uma consoante")
