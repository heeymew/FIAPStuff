print(f"O resultado {a} < {b} é {a<b}")

print(f"O resultado {a} >= {b} é {a>=b}")

print(f"O resultado {a} <= {b} é {a<=b}")

print(f"O resultado {a} == {b} é {a==b}")

print(f"O resultado {a} != {b} é {a!=b}")



a = int(input('Digita um número: '))
b = int(input('Digite outro número: '))
print(f"O resultado de {a} >= {b} or {a} <= {b}, ou seja, {a>=b} or {a<=b} {a>=b or a<=b}")
print(f"O resultado de {a} != {b} or {a} != {b}, ou seja, {a!=b} or {a!=b} {a!=b or a!=b}")
print(f"O resultado de {a} > {b} or {a} < {b}, ou seja, {a>b} or {a<b} {a>b or a<b}")
print(f"O resultado de {a} == {b} or {a} == {b}, ou seja, {a==b} or {a==b} {a==b or a==b}")
print(f"O resultado de {a} < {b} or {a} > {b}, ou seja, {a<b} or {a>b} {a<b or a>b}")
print(f"O resultado de {a} >= {b} and {a} <= {b}, ou seja, {a>=b} and {a<=b} {a>=b or a<=b}")
print(f"O resultado de {a} > {b} or {a} < {b}, ou seja, {a>b} or {a<b} {a!=b or a!=b}")
print(f"O resultado de {a} > {b} or {a} < {b}, ou seja, {a>b} or {a<b} {a>=b or a<=b}")



a = int(input('Digite um número: '))
b = int(input('Digite outro número: '))

print(f"O resultado de {a} > {b} and {a} < {b}, ou seja {a>b} and {a<b} é {a>b}")
print(f"O resultado de {a} < {b} and {a} > {b}, ou seja {a<b} and {a>b} é {a<b}")
print(f"O resultado de {a} >= {b} and {a} <= {b}, ou seja {a>=b} and {a<=b} é {a>=b}")
print(f"O resultado de {a} <= {b} and {a} >= {b}, ou seja {a>=b} and {a<=b} é {a>=b}")
print(f"O resultado de {a} == {b} and {a} == {b}, ou seja {a==b} and {a==b} é {a==b}")
print(f"O resultado de {a} != {b} and {a} != {b}, ou seja {a!=b} and {a!=b} é {a!=b}")


